# Hashmancer Environment Configuration
# Copy this file to .env and customize for your installation

# Installation Mode
INSTALL_MODE=docker
USE_DOCKER=true
ENABLE_GPU=false
SETUP_DOMAIN=false

# Server Configuration
HTTP_PORT=8000
HTTPS_PORT=8443
REDIS_PORT=6379

# Domain Configuration (for SSL/TLS)
DOMAIN_NAME=
SSL_EMAIL=

# Admin Account
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# API Keys (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Security
SECRET_KEY=
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:8000
ALLOW_EXTERNAL=false

# GPU Configuration
GPU_ENABLED=false
GPU_TYPE=nvidia
GPU_MEMORY_FRACTION=0.8
GPU_DEVICE_ID=0

# Performance Settings
MAX_WORKERS=4
WORKER_TIMEOUT=300
MAX_UPLOAD_SIZE=100MB
WORKER_THREADS=4

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=20

# Database (Optional)
DATABASE_URL=
DB_POOL_SIZE=20

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring (Optional)
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=15d

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Storage Configuration (Optional)
STORAGE_TYPE=local
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1

# Worker Configuration
WORKER_ID=worker-1
SERVER_URL=http://localhost:8000

# Development Settings
DEBUG=false
RELOAD=false
DEV_MODE=false

# Feature Flags
ENABLE_TELEMETRY=true
ENABLE_AUTO_UPDATE=false
ENABLE_CLUSTERING=false